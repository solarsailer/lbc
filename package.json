{
  "name": "lbc",
  "version": "0.1.0",
  "description": "Automation for LeBonCoin",
  "license": "MIT",
  "repository": "https://github.com/solarsailer/lbc",
  "author": {
    "name": "Matthieu Oger",
    "url": "https://matthieuoger.com/"
  },
  "bin": {
    "lbc": "bin/lbc"
  },
  "scripts": {
    "start": "node -r esm index.js",
    "test": "eslint ."
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "no-extra-boolean-cast": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, json}": [
      "eslint"
    ],
    "*.{js, json, css, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "arg": "^4.1.0",
    "chalk": "^2.4.2",
    "dotenv": "^6.2.0",
    "esm": "^3.2.0",
    "inquirer": "^6.2.2",
    "puppeteer": "^1.11.0"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.1"
  }
}
